<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Karl.View.MainPage">
    <ContentPage.Content>
		<StackLayout>
			
			<StackLayout Orientation="Horizontal" VerticalOptions="StartAndExpand">
				<Button Text="AudioPlayer" 
					HorizontalOptions="CenterAndExpand"
					Clicked="GotoAudioPlayerPage"/>
			</StackLayout>
			
			<StackLayout Orientation="Horizontal">
				<Label Text="{Binding StepsAmount}"
					x:Name="Steps"
					HorizontalOptions="CenterAndExpand"/>
			</StackLayout>
			
			<StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
				<Button Text="AudioLibrary" 
					HorizontalOptions="StartAndExpand"
					Clicked="GotoAudioLibPage"/>
				<Button Text="Connect"
					ImageSource="{Binding Icon}"
					HorizontalOptions="CenterAndExpand"
					Clicked="GotoConnectionPage"/>
				<Button Text="ModeManager"
					HorizontalOptions="EndAndExpand"
					Clicked="GotoModesPage"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label Text="{Binding DeviceName}"
					x:Name="Device"
					HorizontalOptions="CenterAndExpand"/>
			</StackLayout>
			
			<StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand">
				<Button Text="Settings" 
					HorizontalOptions="CenterAndExpand"
					Clicked="GotoSettingsPage"/>
			</StackLayout>
			
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
