<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Karl.View.MainPage">
    <ContentPage.Content>
		<StackLayout>
			<StackLayout Orientation="Horizontal" VerticalOptions="StartAndExpand">
				<Button Text="AudioPlayer" 
					HorizontalOptions="CenterAndExpand"
					Clicked="AP_Button_Clicked"/>
			</StackLayout>
			<StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
				<Button Text="AudioLibrary" 
					HorizontalOptions="StartAndExpand"
					Clicked="AL_Button_Clicked"/>
				<Button Text="Connect"
					HorizontalOptions="CenterAndExpand"
					Clicked="C_Button_Clicked"/>
				<Button Text="ModeManager"
					HorizontalOptions="EndAndExpand"
					Clicked="MM_Button_Clicked"/>
			</StackLayout>
			<StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand">
				<Button Text="Settings" 
					HorizontalOptions="CenterAndExpand"
					Clicked="S_Button_Clicked"/>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
