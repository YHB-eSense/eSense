<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Karl.View.AudioPlayerPage">
	<ContentPage.Content>
		<StackLayout Margin="20" Orientation="Vertical" VerticalOptions="Center">
			<Slider x:Name="TimeSlider"
					Minimum="0"
					Maximum="{Binding Duration}"
					Value="{Binding Time}"
					HorizontalOptions="FillAndExpand"
					MaximumTrackColor="Black"
					ValueChanged="OnMoveInSong"/>
			<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
				<Button Text="PS"
						HorizontalOptions="Center"
						Command="{Binding PlayPrevCommand}"/>
				<Button Text="PP"
						HorizontalOptions="Center"
						Command="{Binding PausePlayCommand}"
						CommandParameter="{Binding PausePlayBoolean}"
						Clicked="OnPausePlay"/>
				<Button Text="NS"
						HorizontalOptions="Center"
						Command="{Binding PlayNextCommand}"/>
			</StackLayout>
			<Slider	x:Name="VolumeSlider"
					Minimum="0"
					Maximum="100"
					HorizontalOptions="FillAndExpand"
					MaximumTrackColor="Black"
					ValueChanged="OnChangedVolume"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
